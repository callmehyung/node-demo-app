<!DOCTYPE html>
<html lang="en" dir="ltr">

<%- include('header'); -%>

<body>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% for (const i in newItem) { %>
    <div class="item">
      <input type="checkbox" name="" value="">
      <p><%= newItem[i] %></p>
    </div>
    <% } %>
    <form class="item" action="/" method="post">
      <input type="text" name="listItem" placeholder="New Item" autocomplete="off">
      <button type="submit" name="submitB">+</button>
    </form>
  </div>




<%- include('footer'); -%>

</body>

</html>
